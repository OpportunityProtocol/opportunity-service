{
    "compilerOptions": {

        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": false,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}